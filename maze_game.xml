<?xml version="1.0" encoding="UTF-8"?>
<project name="maze_game" default="all">
  
  
  <property file="maze_game.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/*.yarb/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/CVS/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.war"/>
    <include name="*.swc"/>
    <include name="*.zip"/>
    <include name="*.egg"/>
    <include name="*.ane"/>
    <include name="*.jar"/>
    <include name="*.ear"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.8" value="${jdk.home.1.8}/bin"/>
  <path id="jdk.classpath.1.8">
    <fileset dir="${jdk.home.1.8}">
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/deploy.jar"/>
      <include name="jre/lib/ext/access-bridge-64.jar"/>
      <include name="jre/lib/ext/cldrdata.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/jaccess.jar"/>
      <include name="jre/lib/ext/jfxrt.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/nashorn.jar"/>
      <include name="jre/lib/ext/sunec.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/ext/sunmscapi.jar"/>
      <include name="jre/lib/ext/sunpkcs11.jar"/>
      <include name="jre/lib/ext/zipfs.jar"/>
      <include name="jre/lib/javaws.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/jfr.jar"/>
      <include name="jre/lib/jfxswt.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/plugin.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/rt.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.8}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.8}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.8"/>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <pathelement location="${javac2.home}/javac2.jar"/>
    <pathelement location="${javac2.home}/jdom.jar"/>
    <pathelement location="${javac2.home}/asm-all.jar"/>
    <pathelement location="${javac2.home}/jgoodies-forms.jar"/>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module Maze Game -->
  
  <dirname property="module.maze_game.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.maze_game" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.maze_game" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.maze_game" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.maze_game" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="maze_game.output.dir" value="${module.maze_game.basedir}/out/production/Maze Game"/>
  <property name="maze_game.testoutput.dir" value="${module.maze_game.basedir}/out/test/Maze Game"/>
  
  <path id="maze_game.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="maze_game.module.production.classpath">
    <path refid="${module.jdk.classpath.maze_game}"/>
  </path>
  
  <path id="maze_game.runtime.production.module.classpath">
    <pathelement location="${maze_game.output.dir}"/>
  </path>
  
  <path id="maze_game.module.classpath">
    <path refid="${module.jdk.classpath.maze_game}"/>
    <pathelement location="${maze_game.output.dir}"/>
  </path>
  
  <path id="maze_game.runtime.module.classpath">
    <pathelement location="${maze_game.testoutput.dir}"/>
    <pathelement location="${maze_game.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.maze_game">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.maze_game">
    <patternset refid="excluded.from.module.maze_game"/>
  </patternset>
  
  <path id="maze_game.module.sourcepath">
    <dirset dir="${module.maze_game.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.maze_game" depends="compile.module.maze_game.production,compile.module.maze_game.tests" description="Compile module Maze Game"/>
  
  <target name="compile.module.maze_game.production" depends="register.custom.compilers" description="Compile module Maze Game; production classes">
    <mkdir dir="${maze_game.output.dir}"/>
    <javac2 destdir="${maze_game.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.maze_game}/javac">
      <compilerarg line="${compiler.args.maze_game}"/>
      <bootclasspath refid="maze_game.module.bootclasspath"/>
      <classpath refid="maze_game.module.production.classpath"/>
      <src refid="maze_game.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.maze_game"/>
    </javac2>
    
    <copy todir="${maze_game.output.dir}">
      <fileset dir="${module.maze_game.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.maze_game.tests" depends="register.custom.compilers,compile.module.maze_game.production" description="compile module Maze Game; test classes" unless="skip.tests"/>
  
  <target name="clean.module.maze_game" description="cleanup module">
    <delete dir="${maze_game.output.dir}"/>
    <delete dir="${maze_game.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.maze_game" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.maze_game" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
</project>